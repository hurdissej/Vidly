@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Customers </h2>
    
<table id="customers" style="width: 100%; margin-top: 50px;" class="table table-striped table-hover ">
    <thead>
    <tr>
        <th> Customer </th>
        <th> Membership Type </th>
        <th> Delete Customer </th>
    </tr>
    </thead>
    <tbody></tbody>
   
</table>

@section scripts {
    <script>
        $(document).ready(function () {
           var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                }, 
                columns: [
                    {
                        data: "name", 
                        render: function(data, type, customer) {
                            return "<a href='/customer/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    }, {
                        data: "membershipType.displayName"
                    }, {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-customer-id=" +
                                data +
                                "> Delete </button>";
                        }
                    }
                ]
            });



            $("#customers").on("click", ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "Delete",
                                    success: function () {
                                        table.row(button.parents("tr"))
                                            .remove()
                                            .draw();
                                    }
                                });
                            }
                        });
                });
        })
    </script>
}