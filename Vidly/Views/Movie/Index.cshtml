@model IEnumerable<Vidly.Models.Movie>
    
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style ="margin-top: 20px;" class=" btn btn-success"> @Html.ActionLink("Add a Movie!", "New", "Movie") </p>

<table style="width: 300px; margin-top: 20px;" class="table table-striped table-hover ">
    <thead>
    <tr>
        <th> Movie </th>
        <th> Genre </th>
    </tr>
    </thead>
    @foreach (var movie in @Model)
    {
        <tr>
            <td> @Html.ActionLink(@movie.Name, "Edit" , "Movie"  , new { id = @movie.ID  }, null)   </td>
            <td> @movie.Genre.Genre  </td>
        </tr>
    }

</table>